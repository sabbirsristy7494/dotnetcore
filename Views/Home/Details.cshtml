
@model HomeDetailsViewModel

@{
    ViewBag.Title = "Employee Details";
}

<div class="row justify-content-center m-3">
    <div class="col-sm-8">
        <div class="card">
            <h1>@Model.Employee.Name</h1>
        </div>

        <div class="card-body text-center">
            <img class="card-img-top" src="~/images/3.jpg" />
            <h4>Employee ID: @Model.Employee.ID</h4>
            <h4>Employee Email: @Model.Employee.Email</h4>
            <h4>Employee Department: @Model.Employee.Department</h4>
        </div>

        <div class="card-footer text-center">
            <a asp-controller="home" asp-action="index" class="btn btn-primary">Back</a>
            <a href="#" class="btn btn-primary">Edit</a>
            <a href="#" class="btn btn-danger">Delete</a>
        </div>
    </div> 
</div>

@section Scripts {
    <script src="~/js/Customscript.js"></script>
}

